.anime-section {
  max-width: 800px;
  margin: 0 auto;
}

.episode {
  margin-bottom: 40px;
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0,0,0,0.2);
}

.episode h3 {
  margin-bottom: 10px;
  font-size: 20px;
}

video {
  width: 100%;
  height: auto;
  background-color: black;
  border-radius: 8px;
}
